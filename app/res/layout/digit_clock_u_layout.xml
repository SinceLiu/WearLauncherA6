<?xml version="1.0" encoding="utf-8"?>
<com.readboy.wearlauncher.view.DigitClock xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/digit_clock"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:clockType="@integer/dial_type_t"
    app:dot="false">

    <ImageView
        android:id="@+id/hour0"
        android:layout_width="47px"
        android:layout_height="107px" />

    <ImageView
        android:id="@+id/hour1"
        android:layout_width="47px"
        android:layout_height="107px"
        android:layout_marginStart="2px" />

    <ImageView
        android:id="@+id/dot"
        android:layout_width="10px"
        android:layout_height="@dimen/num_clock_s_height"
        android:layout_marginStart="4px"
        android:src="@drawable/num_clock_s_dot"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/min0"
        android:layout_width="27px"
        android:layout_height="61px"
        android:layout_marginTop="2px"
        android:layout_marginStart="11px" />

    <ImageView
        android:id="@+id/min1"
        android:layout_width="27px"
        android:layout_height="61px"
        android:layout_marginTop="2px"
        android:layout_marginStart="2px" />

</com.readboy.wearlauncher.view.DigitClock>
