<?xml version="1.0" encoding="utf-8"?>
<com.readboy.wearlauncher.view.DigitClock xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/digit_clock"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
	app:dot="false"
	app:clockType="@integer/dial_type_r"
	>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/hour0"
			android:layout_width="@dimen/num_clock_r_width"
			android:layout_height="@dimen/num_clock_r_height"
			/>
		<ImageView
			android:id="@+id/hour1"
			android:layout_width="@dimen/num_clock_r_width"
			android:layout_height="@dimen/num_clock_r_height"
			android:layout_marginStart="@dimen/num_clock_r_margin_left"
			/>
	</LinearLayout>

	<ImageView
		android:id="@+id/dot"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:visibility="gone"
		/>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/num_clock_r_minute_margin_top"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/min0"
			android:layout_width="@dimen/num_clock_r_width"
			android:layout_height="@dimen/num_clock_r_height"
			/>
		<ImageView
			android:id="@+id/min1"
			android:layout_width="@dimen/num_clock_r_width"
			android:layout_height="@dimen/num_clock_r_height"
			android:layout_marginStart="@dimen/num_clock_r_margin_left"
			/>
	</LinearLayout>
</com.readboy.wearlauncher.view.DigitClock>
