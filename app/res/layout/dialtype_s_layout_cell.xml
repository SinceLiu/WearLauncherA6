<com.readboy.wearlauncher.view.WatchDialTypeS xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/watch_type_s_bg">

    <!--time-->
    <include
        layout="@layout/digit_clock_s_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dial_s_digit_clock_margin_top"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/iv_month_decimal"
        android:layout_width="@dimen/dial_s_date_width"
        android:layout_height="@dimen/dial_s_date_height"
        android:layout_alignTop="@+id/iv_separator"
        android:layout_marginEnd="@dimen/dial_s_day_margin"
        android:layout_toStartOf="@+id/iv_month_unit" />

    <ImageView
        android:id="@+id/iv_month_unit"
        android:layout_width="@dimen/dial_s_date_width"
        android:layout_height="@dimen/dial_s_date_height"
        android:layout_alignTop="@+id/iv_separator"
        android:layout_marginStart="@dimen/dial_s_month_unit_margin_left" />

    <ImageView
        android:id="@+id/iv_separator"
        android:layout_width="@dimen/dial_s_date_width"
        android:layout_height="@dimen/dial_s_date_height"
        android:layout_marginTop="@dimen/dial_s_separator_margin_top"
        android:layout_marginStart="@dimen/dial_s_separator_margin_left"
        android:src="@drawable/dial_r_date_separator" />

    <ImageView
        android:id="@+id/iv_day_decimal"
        android:layout_width="@dimen/dial_s_date_width"
        android:layout_height="@dimen/dial_s_date_height"
        android:layout_alignTop="@+id/iv_separator"
        android:layout_marginStart="@dimen/dial_s_day_margin"
        android:layout_toRightOf="@+id/iv_separator" />

    <ImageView
        android:id="@+id/iv_day_unit"
        android:layout_width="@dimen/dial_s_date_width"
        android:layout_height="@dimen/dial_s_date_height"
        android:layout_alignTop="@+id/iv_separator"
        android:layout_marginStart="@dimen/dial_s_day_margin"
        android:layout_toRightOf="@+id/iv_day_decimal" />

    <ImageView
        android:id="@+id/iv_week"
        android:layout_width="@dimen/dial_s_week_width"
        android:layout_height="@dimen/dial_s_week_height"
        android:layout_alignTop="@+id/iv_separator"
        android:layout_marginStart="@dimen/dial_s_week_margin_left"
        android:layout_toRightOf="@+id/iv_separator" />


    <Button
        android:id="@+id/btn_id_dialer"
        android:layout_width="@dimen/dial_a_dialer_width"
        android:layout_height="@dimen/dial_a_dialer_hight"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/dial_s_dialer_margin_left"
        android:layout_marginTop="@dimen/dial_s_dialer_margin_top"
        android:background="@drawable/watch_type_s_dialer"
        android:clickable="false"
        android:enabled="false" />

    <TextView
        android:id="@+id/text_id_dialer_num"
        style="@style/cornerSignTextView"
        android:layout_alignRight="@id/btn_id_dialer"
        android:layout_alignTop="@id/btn_id_dialer"
        android:elevation="10dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_id_mms"
        android:layout_width="@dimen/dial_a_wetalk_width"
        android:layout_height="@dimen/dial_a_wetalk_hight"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_id_dialer"
        android:layout_marginRight="@dimen/dial_s_wetalk_margin_right"
        android:background="@drawable/watch_type_s_wetalk"
        android:clickable="false"
        android:enabled="false" />

    <TextView
        android:id="@+id/text_id_mss_num"
        style="@style/cornerSignTextView"
        android:layout_alignRight="@id/btn_id_mms"
        android:layout_alignTop="@id/btn_id_mms"
        android:elevation="10dp"
        android:visibility="invisible" />

</com.readboy.wearlauncher.view.WatchDialTypeS>
